<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.hd.mapper.UserMapper">
	    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="User" >
	        insert into user ( name, price ) values (#{name}, #{price})    
	    </insert>
	    
	    <select id="select" parameterType="User" resultType="User">
      select * from user where id=#{id}
    </select>
	        
	</mapper>

